<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <TextView android:text="Please Select a Car Park" android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:textSize="12pt"
        android:textAlignment="center"
        android:id="@+id/MainScreenText"
        android:layout_marginTop="73dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CarParkSelector"
        android:layout_below="@+id/MainScreenText"


        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="GO!"
        android:id="@+id/goButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/roundedbutton"
        />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="Maps"
        android:id="@+id/settingsButton"
        android:layout_marginBottom="52dp"
        android:background="@drawable/yellowroundedbutton"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/goButton"
        android:layout_toStartOf="@+id/goButton" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="Exit"
        android:id="@+id/ExitButton"

        android:background="@drawable/redroundedbutton"
        android:layout_alignTop="@+id/settingsButton"
        android:layout_toRightOf="@+id/goButton"
        android:layout_toEndOf="@+id/goButton" />



</RelativeLayout>
